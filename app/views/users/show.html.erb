<h1 class="visit-title">Your profile</h1>
<% if @user == current_user %>
  <div class="card-product general-card">
    <% unless @user.photo.key.nil? %>
      <%= cl_image_tag @user.photo.key %>
    <% else %>
      <%= image_tag "favicon.ico", :alt=>"review image" %>
    <% end %>
    <div class="card-product-infos">
      <h2><%= @user.username %></h2>
      <h2><%= @user.email %></h2>
      <% if @user.venue_owned.nil? %>
        <p>Own a venue? <%= mail_to "admin@where2work.es", "Email us" %>
      <% else %>
        <p><strong>Venue(s):</strong>  <%= @user.venue_owned %>
      <% end %>
      <p><%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %></p>
    </div>
  </div>
<% else %>
  <div class="card-product">
    <%= cl_image_tag @user.photo.key %>
    <div class="card-product-infos">
      <h2><%= @user.username %></h2>
      <p><%= link_to "My Profile", user_path(current_user) %></p>
    </div>
  </div>
<% end %>
